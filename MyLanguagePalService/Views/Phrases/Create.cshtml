@using MyLanguagePalService.Models.Controllers.Phrase
@model PhraseIm

@{
    ViewBag.Title = "Create a phrase";
}

<h3>Create a phrase</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-sm-2 control-label">Phrase: </label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                <div class="btn-group" data-toggle="buttons">
                    @foreach (var languageOption in (IEnumerable<LanguageOptionVm>)ViewBag.LanguagesOptions)
                    {
                        var isSelected = languageOption.Id == Model.LanguageId;

                        var radioHtmlAttributes = new Dictionary<string, object>
                        {
                            ["name"] = "languages",
                            ["autocomplete"] = "off"
                        };
                        if (isSelected)
                        {
                            radioHtmlAttributes["checked"] = "checked";
                        }

                        <label class="btn btn-default@(isSelected ? " active" : "")">
                            @Html.RadioButtonFor(model => model.LanguageId, value: languageOption.Id, htmlAttributes: radioHtmlAttributes)
                            @languageOption.Name
                        </label>
                    }
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Translations: </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Translations, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Translations, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Synonims: </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Synonims, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Synonims, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
